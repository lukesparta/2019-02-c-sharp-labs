        <Label x:Name="levelLabel" Grid.Row="2" Grid.Column="0" Content="Level"/>
        <TextBox x:Name="txtLevel" Grid.Row="2" Grid.Column="1" />

        <Label x:Name="scoreLabel"  Grid.Row="3" Grid.Column="0" Content="Score"/>
        <TextBox x:Name="txtScore"  Grid.Row="3" Grid.Column="1" />

        <Button x:Name="saveBtn" Background="Green" Grid.Row="4" Grid.Column="1" Content="SAVE" Click="SaveBtn_Click"/>

